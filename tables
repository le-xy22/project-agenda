create table Evento (
Id INT AUTO_INCREMENT PRIMARY KEY, 
Titulo varchar(100) not null,
DataInicio DateTime, 
DataFim DateTime,
Observação varchar(100) null);

create table Tipo_Evento (
Id INT AUTO_INCREMENT PRIMARY KEY, 
Nome varchar(100), 
Cor char(9));

create table Lembrete (
Id INT AUTO_INCREMENT PRIMARY KEY, 
Id_Evento int, 
Status varchar(100), 
DataHora DateTime,
FOREIGN KEY (Id_Evento) REFERENCES Evento(Id));
 
